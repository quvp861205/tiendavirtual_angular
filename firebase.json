{
  "hosting": {
    "public": "dist/platzi-store",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers" : [ {
      "source": "http://platzi-store.herokuapp.com/*",
      "headers": [{
        "key": "Access-Control-Allow-Origin",
        "value": "http://platzi-store.herokuapp.com/*"   
      }]        
    } ]
  }
}
